                  },
                  "type": "SUB_WORKFLOW",
                  "decisionCases": {},
                  "defaultCase": [],
                  "forkTasks": [],
                  "startDelay": 0,
                  "subWorkflowParam": {
                    "name": "individual_updates"
                  },
                  "joinOn": [],
                  "optional": true,
                  "defaultExclusiveJoinTask": [],
                  "asyncComplete": false,
                  "loopOver": [],
                  "onStateChange": {}
                }
              ]
            ],
            "startDelay": 0,
            "joinOn": [],
